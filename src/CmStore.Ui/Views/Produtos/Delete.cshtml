@model CmStore.Core.Models.Produto

@{
    ViewData["Title"] = $"Excluir Produto - {Model.Nome}";
}

<h1>Excluir</h1>

<h3 class="text-danger">Você tem certeza que deseja excluir o produto - @Model.Nome?</h3>
<div>
    <h4>Dados do Produto</h4>
    <hr />
    <dl class="row" style="margin-bottom: 20px;">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Imagem)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Html.GetUrlImageProduto(Model)" alt="@Model.Imagem" style="width: 70px; height: 100px" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QuantidadeEstoque)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuantidadeEstoque)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />

        <a class="btn btn-secondary" asp-action="Index"><i class="fas fa-reply"></i> Voltar</a>
        <button class="btn btn-danger" type="submit">
            <i class="fas fa-trash-alt"></i> Excluir
        </button>
    </form>
</div>
