@model IEnumerable<CmStore.Core.Models.Categoria>

@{
    ViewData["Title"] = "Cadastro Categorias";
}

<h1>Cadastro Categorias</h1>

@await Html.PartialAsync("_messageResult")

<p>
    <a class="btn btn-secondary" asp-controller="Produtos" asp-action="Index"><i class="fas fa-reply"></i> Voltar</a>
    <a class="btn btn-success" asp-action="Create"><i class="far fa-file"></i> Nova</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Codigo)</th>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Ativo)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Codigo)</td>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Ativo)</td>
                <td>
                    <a class="btn btn-sm btn-success" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
                    <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-search"></i></a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
