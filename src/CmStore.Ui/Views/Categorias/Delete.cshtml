@model CmStore.Core.Models.Categoria

@{
    ViewData["Title"] = $"Excluir Categoria - {Model.Nome}";
}

<h1>Excluir</h1>

<h3 class="text-danger">Você tem certeza que deseja excluir o produto - @Model.Nome?</h3>
<div>
    <h4>Dados da Categoria</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Codigo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Codigo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />

        <a class="btn btn-secondary" asp-action="Index"><i class="fas fa-reply"></i> Voltar</a>
        <button class="btn btn-danger" type="submit">
            <i class="fas fa-trash-alt"></i> Excluir
        </button>
    </form>
</div>
